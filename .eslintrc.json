
{
  "extends": [
    "plugin:mocha/recommended",
    "ipfs"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-return-await": "off",
    "no-undef-init": "off",
    "no-warning-comments": "off",
    "mocha/max-top-level-suites": "off",
    "mocha/no-skipped-tests": "off",
    "mocha/no-setup-in-describe": "off"

  },
  "ignorePatterns": [
    "test/fixtures/",
    "test/interface-tests/fixtures/",
    "test/interface-tests/src/utils/"
  ],
  "plugins": ["mocha"],
  "overrides": [
    {
      "files": ["test/interface-tests/src/**"],
      "rules": {
        "mocha/no-exports": "off"
      }
    }
  ]
}
